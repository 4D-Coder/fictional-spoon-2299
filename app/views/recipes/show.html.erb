<section>
  <h2>Recipe</h2>
  <h3><%= @recipe.name %>:</h3>
  <ul>
    <li>Complexity: <%= @recipe.complexity%></li>
    <li>Genre: <%= @recipe.genre %></li><br>
  </ul>
</section>
<section>
  <h3>Recipe Ingredients:</h3>
  <ul>
    <% @recipe_ingredients.each do |ingredient|%>
      <li><%= ingredient.name %></li><br>
    <% end %>
  </ul>
</section>
<section>
  <h4>Total Cost for Ingredients: $<%= @total_cost %>.00</h4>
</section>